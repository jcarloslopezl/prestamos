<p id="notice"><%= notice %></p>

<div class="page-title">
  <div class="row">
    <h1 class="col-xs-12 col-sm-8">
      <i class="fa fa-folder-open-o page-title-icon"></i> Datos de solicitud
    </h1>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <span class="panel-title">Datos de la solicitud</span>
  </div>
  <div class="panel-body">

		<table class="table table-user-information">
		  <tbody>
		    <tr>
		      <th>Ingresos mensuales ($):</th>
		      <td>$<%= @requisition.income %></td>
		    </tr>
		    <tr>
		      <th>Años tiene viviendo en su domicilio actual:</th>
		      <td><%= @requisition.address_years %></td>
		    </tr>
		    <tr>
		      <th>Estado civil:</th>
		      <td><%= @requisition.marital_status %></td>
		    </tr>
		    <tr>
		      <th>Personas que dependen de usted:</th>
		      <td><%= @requisition.dependents_number %></td>
		    </tr>
		    <tr>
		      <th>Monto que solicita ($):</th>
		      <td>$<%= @requisition.requested_amount %></td>
		    </tr>
		    <tr>
		      <th>Términos de pago:</th>
		      <td><%= @requisition.payment_terms %></td>
		    </tr>
		    <tr>
		      <th>Banco:</th>
		      <td><%= @requisition.bank %></td>
		    </tr>
		  </tbody>
		</table>

		<%= link_to 'Modificar', edit_requisition_path(@requisition) %> |
		<%= link_to 'Regresar', requisitions_path %>
	</div>
</div>	